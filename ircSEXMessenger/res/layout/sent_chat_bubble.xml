<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/channel_item_wrapper"
        style="@style/chatBubbleLayout"
        android:background="@drawable/right_chat_bubble"
        android:paddingRight="20dp"
        android:paddingLeft="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/channel_item_message" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chat_bubble_timestamp"
            android:layout_below="@+id/channel_item_message"
            android:textColor="#FFc0c0c0"
            android:textSize="12sp" />

    </RelativeLayout>
</LinearLayout>