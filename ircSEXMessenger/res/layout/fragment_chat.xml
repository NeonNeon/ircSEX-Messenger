<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <se.chalmers.dat255.ircsex.view.ChatListView
        android:id="@+id/chat_message_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="10dp"
        android:padding="8dp"
        android:layout_weight="1"
        android:background="#FFe6e6e6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:background="#FFFFFFFF"
        android:padding="6dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/sendMessage"
            android:textColorHint="#FFc0c0c0"
            android:inputType="textCapSentences"
            android:textSize="32sp"
            android:background="#00000000"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:id="@+id/fragment_chat_message"
            android:layout_gravity="center"
        />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_chat_send"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:src="@drawable/social_send_now"
            android:background="@null"
            android:layout_gravity="bottom" />
    </LinearLayout>

</LinearLayout>
